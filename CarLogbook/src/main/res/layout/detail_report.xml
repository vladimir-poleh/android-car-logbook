					<TextView
						style="@style/add_entity_label"
						android:text="@string/total_fuel"/>

					<TextView
						android:id="@+id/totalFuel"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fillup_total"/>

					<TextView
						android:id="@+id/fillupCount"
						style="@style/wrap"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fillupMin"/>

					<TextView
						android:id="@+id/fillupMin"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fillupMax"/>

					<TextView
						android:id="@+id/fillupMax"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fillupAvg"/>

					<TextView
						android:id="@+id/fillupAvg"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fuel_volume_month"/>

					<TextView
						android:id="@+id/fuel_volume_month"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fuel_volume_last_month"/>

					<TextView
						android:id="@+id/fuel_volume_last_month"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fuel_volume_year"/>

					<TextView
						android:id="@+id/fuel_volume_year"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/fuel_volume_last_year"/>

					<TextView
						android:id="@+id/fuel_volume_last_year"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/min_days_fillups"/>

					<TextView
						android:id="@+id/min_days_fillups"
						style="@style/wrap"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
