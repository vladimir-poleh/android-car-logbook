				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/cost_fillup_avg"/>

					<TextView
						android:id="@+id/cost_fillup_avg"
						style="@style/wrap"
						android:textColor="@color/price"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/cost_total_per_day"/>

					<TextView
						android:id="@+id/cost_total_per_day"
						style="@style/wrap"
						android:textColor="@color/price"/>
