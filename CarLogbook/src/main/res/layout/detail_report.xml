					<TextView
						android:id="@+id/max_fillup_dist"
						style="@style/wrap"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/avg_fillup_dist"/>

					<TextView
						android:id="@+id/avg_fillup_dist"
						style="@style/wrap"/>
				</LinearLayout>
			</LinearLayout>
			<!--Cost-->
			<TextView
				style="@style/new_title"
				android:text="@string/cost"/>

			<LinearLayout style="@style/new_group">

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/cost_total"/>

					<TextView
						android:id="@+id/cost_total"
						style="@style/wrap"
						android:textColor="@color/price"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/cost_total_month"/>

					<TextView
						android:id="@+id/cost_total_month"
						style="@style/wrap"
						android:textColor="@color/price"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/cost_total_last_month"/>

					<TextView
						android:id="@+id/cost_total_last_month"
						style="@style/wrap"
						android:textColor="@color/price"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
