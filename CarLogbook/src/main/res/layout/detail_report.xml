<android.support.v4.widget.SwipeRefreshLayout
	android:id="@+id/swipe_container"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		style="@style/add_entity_scroll">

		<LinearLayout style="@style/add_entity_main">

			<ProgressBar
				android:id="@+id/progress"
				style="?android:attr/progressBarStyleHorizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:indeterminate="true"
				android:visibility="gone"/>
			<!--Consumption-->
			<TextView
				style="@style/new_title"
				android:text="@string/consumption"/>

			<LinearLayout style="@style/new_group">

				<LinearLayout style="@style/add_entity_group">

					<TextView
						android:id="@+id/avg100Label"
						style="@style/add_entity_label"
						android:text="@string/avg"/>

					<TextView
						android:id="@+id/avg100"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						android:id="@+id/lperkmLabel"
						style="@style/add_entity_label"
						android:text="@string/avg"/>

					<TextView
						android:id="@+id/lperkm"
						style="@style/wrap"
						android:textColor="@color/gal"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						android:id="@+id/kmperlLabel"
						style="@style/add_entity_label"
						android:text="@string/avg"/>

					<TextView
						android:id="@+id/kmperl"
						style="@style/wrap"/>
				</LinearLayout>

			</LinearLayout>
			<!--Fuel-->
			<TextView
				style="@style/new_title"
				android:text="@string/unit_fuel"/>


			<LinearLayout style="@style/new_group">

