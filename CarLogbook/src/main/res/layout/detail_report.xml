				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
						android:text="@string/cost_total_per_year"/>

					<TextView
						android:id="@+id/cost_total_per_year"
						style="@style/wrap"
						android:textColor="@color/price"/>
				</LinearLayout>

				<LinearLayout style="@style/add_entity_group">

					<TextView
						style="@style/add_entity_label"
